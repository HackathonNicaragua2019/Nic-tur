<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:srcCompat="@drawable/ic_nicaragua"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/imageView2"/>

    <ImageButton
        android:layout_height="100dp"
        android:layout_width="69dp"
        app:srcCompat="@drawable/ic_leon"
        app:layout_constraintVertical_bias="0.549"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/imageButton5"
        android:scrollbarDefaultDelayBeforeFade="400"
        android:scaleType="fitCenter"
        android:padding="-200dp"
        android:onClick="leon_site"
        android:background="@null"
        android:adjustViewBounds="true"
        style="@style/Widget.AppCompat.ImageButton"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.54"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/textView"
        app:fontFamily="@font/raleway_medium"
        android:text="LeÃ³n"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.112"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        android:id="@+id/textView2" android:text="!Elige Un Destino!"
        android:textSize="24sp"/>

    <ImageView
        android:layout_height="50dp"
        android:layout_width="match_parent"
        app:srcCompat="@drawable/action_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/imageView"/>

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/ic_nictur_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/imageView3"/>

    <ImageButton
        android:layout_height="50dp"
        android:layout_width="48dp"
        app:srcCompat="@drawable/ic_opciones"
        android:id="@+id/imageButton"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"/>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:id="@+id/divider"
        android:background="?android:attr/listDivider"
        tools:layout_editor_absoluteX="1dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:layout_marginTop="4dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>